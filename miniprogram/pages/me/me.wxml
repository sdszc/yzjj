<header title="{{title}}" />
<view class='base-padding row' bindtap='userLoginEvent'>
  <view class='user'>
    <image src='{{user.avatar}}'></image>
    <view class='username font-lv2'>{{user.nickname}}</view>
    <view class='color-grey font-lv3'>{{user.intro}}</view>
  </view>
</view>
<view class='base-padding row base-info'>
  <navigator url="{{user.uid>0? '/pages/ucenter/ucenter?tab=release':'/pages/login/login'}}" class='col-12' bindtap="showMessage">
    <image src='/images/book.png' class="pull-left"></image>我的发布
    <image class='pull-right' src='/images/right-angle.png'></image>
  </navigator>
  <navigator url='{{user.uid>0?"/pages/ucenter/ucenter?tab=star":"/pages/login/login"}}' class='col-12' bindtap="showMessage">
    <image src='/images/star.png' class="pull-left"></image>
    我的收藏
    <image class='pull-right' src='/images/right-angle.png'></image>
  </navigator>
  <navigator url='{{user.uid>0?"/pages/ucenter/ucenter?tab=follow":"/pages/login/login"}}' class='col-12' bindtap="showMessage">
    <image src='/images/follow.png' class="pull-left"></image>
    我的关注
    <image class='pull-right' src='/images/right-angle.png'></image>
  </navigator>
  <navigator url='{{user.uid>0?"/pages/ucenter/ucenter?tab=fans":"/pages/login/login"}}' class='col-12' bindtap="showMessage">
    <image src='/images/fans.png' class="pull-left"></image>
    我的粉丝
    <image class='pull-right' src='/images/right-angle.png'></image>
  </navigator>
</view>

<view class='base-padding row base-info'>
  <view class='col-12' bindtap="showMessage">
    <image src='/images/share.png' class="pull-left"></image>
    分享到朋友圈
    <image class='pull-right' src='/images/right-angle.png'></image>
  </view>
</view>

<view wx:if="{{info.about}}" class='base-padding row base-info'>
  <navigator url='/pages/read/read?identify={{info.about}}' class='col-12' bindtap="showMessage">
    <image src='/images/about-us.png' class="pull-left"></image>
    关于我们
    <image class='pull-right' src='/images/right-angle.png'></image>
  </navigator>
</view>

<view class='base-padding row base-info'>
  <view class='col-12 text-center'>
    <view wx:if="{{info.copyright}}">
      <text class='font-lv4 color-grey'>Copyright © {{now}} {{info.copyright}}</text>
    </view>
    <view wx:if="{{info.license}}">
      <text class='font-lv4 color-grey'>License：{{info.license}}</text>
    </view>
    <view wx:if="{{info.author}}">
      <text class='font-lv4 color-grey'>Author：{{info.author}}</text>
    </view>
    <view wx:if="{{info.version}}">
      <text class='font-lv4 color-grey'>Version：{{info.version}}</text>
    </view>
  </view>
</view>